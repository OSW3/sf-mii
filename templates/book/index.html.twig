{% extends 'base.html.twig' %}
{% set title = "Liste des livres" %}

{% block title title %}

{% block body %}
<h2>{{ title }}</h2>

<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Titre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

        {% for book in books %}  
        <tr>
            <td>
                {{ book.id }}
            </td>
            <td>
                {{ book.title }}
            </td>
            <td>
                <a href="{{ url('book:show', {id: book.id}) }}">show</a>
                <a href="{{ url('book:edit', {id: book.id}) }}">edit</a>
            </td>
        </tr>
        {% endfor %}

    </tbody>
</table>
{% endblock %}
